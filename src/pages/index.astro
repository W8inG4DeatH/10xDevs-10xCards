---
import Layout from "../layouts/Layout.astro";
import { GenerationView } from "../components/GenerationView";

// Get user from middleware
const user = Astro.locals.user;
---

<Layout title="10x Cards - Generate Flashcards">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold mb-4 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
        Generate Flashcards with AI
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-6">
        Transform your text into effective flashcards instantly using advanced AI technology.
      </p>

      <!-- Benefits notice for non-logged users -->
      {
        !user && (
          <div class="bg-blue-50 dark:bg-blue-950 border border-blue-200 dark:border-blue-800 rounded-lg p-4 mb-8">
            <div class="flex items-center justify-center gap-2 text-blue-800 dark:text-blue-200 mb-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                  clip-rule="evenodd"
                />
              </svg>
              <span class="font-medium">Create an account to unlock more features!</span>
            </div>
            <p class="text-sm text-blue-700 dark:text-blue-300">
              Save your flashcards, organize them into collections, and access spaced repetition study sessions.
            </p>
            <div class="mt-3 flex justify-center gap-3">
              <a
                href="/auth/register"
                class="text-sm bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors"
              >
                Sign Up Free
              </a>
              <a
                href="/auth/login"
                class="text-sm border border-blue-600 text-blue-600 px-4 py-2 rounded-md hover:bg-blue-50 dark:hover:bg-blue-900 transition-colors"
              >
                Sign In
              </a>
            </div>
          </div>
        )
      }

      <!-- Welcome message for logged users -->
      {
        user && (
          <div class="bg-green-50 dark:bg-green-950 border border-green-200 dark:border-green-800 rounded-lg p-4 mb-8">
            <div class="flex items-center justify-center gap-2 text-green-800 dark:text-green-200 mb-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"
                />
              </svg>
              <span class="font-medium">Welcome back, {user.email}!</span>
            </div>
            <p class="text-sm text-green-700 dark:text-green-300">
              Generate flashcards and save them to your collection. Access your saved flashcards and study sessions from
              the navigation menu.
            </p>
          </div>
        )
      }
    </div>

    <GenerationView client:load />

    <!-- Features Section -->
    <div class="mt-16 grid md:grid-cols-3 gap-8">
      <div class="text-center">
        <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mx-auto mb-4">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold mb-2">AI-Powered Generation</h3>
        <p class="text-gray-600 dark:text-gray-400">
          Our advanced AI analyzes your text and creates relevant, high-quality flashcards automatically.
        </p>
      </div>

      <div class="text-center">
        <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center mx-auto mb-4">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
            ></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold mb-2">Easy Editing</h3>
        <p class="text-gray-600 dark:text-gray-400">
          Review, edit, and customize generated flashcards to perfectly match your learning needs.
        </p>
      </div>

      <div class="text-center">
        <div
          class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center mx-auto mb-4"
        >
          <svg
            class="w-6 h-6 text-purple-600 dark:text-purple-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
            ></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold mb-2">Smart Study Sessions</h3>
        <p class="text-gray-600 dark:text-gray-400">
          Use spaced repetition algorithms to optimize your learning and retention.
          <span class="text-sm text-gray-500 block mt-1">(Account required)</span>
        </p>
      </div>
    </div>
  </div>
</Layout>
