---
import Layout from "../../layouts/Layout.astro";
import { ResetPasswordForm } from "../../components/auth/ResetPasswordForm";

// Get token from URL parameters
const url = Astro.url;
const token = url.searchParams.get("token");
---

<Layout title="Reset Password - 10x Cards">
  <main
    class="min-h-screen flex items-center justify-center p-4 bg-gradient-to-br from-purple-50 to-violet-100 dark:from-gray-900 dark:to-gray-800"
  >
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <a href="/" class="inline-block">
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">10x Cards</h1>
        </a>
        <p class="mt-2 text-gray-600 dark:text-gray-400">Create a new password for your account.</p>
      </div>

      <ResetPasswordForm client:load token={token || undefined} />

      <div class="mt-8 text-center text-sm text-gray-500 dark:text-gray-400">
        <p>
          Need a new reset link?{" "}
          <a href="/auth/forgot-password" class="text-primary hover:underline font-medium"> Request another one </a>
        </p>
      </div>
    </div>
  </main>
</Layout>
