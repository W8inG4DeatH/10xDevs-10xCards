---
import Layout from "../../layouts/Layout.astro";
import { ForgotPasswordForm } from "../../components/auth/ForgotPasswordForm";
---

<Layout title="Reset Password - 10x Cards">
  <main
    class="min-h-screen flex items-center justify-center p-4 bg-gradient-to-br from-orange-50 to-amber-100 dark:from-gray-900 dark:to-gray-800"
  >
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <a href="/" class="inline-block">
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">10x Cards</h1>
        </a>
        <p class="mt-2 text-gray-600 dark:text-gray-400">No worries! We'll help you reset your password.</p>
      </div>

      <ForgotPasswordForm client:load />

      <div class="mt-8 text-center text-sm text-gray-500 dark:text-gray-400">
        <p>
          Remember your password?{" "}
          <a href="/auth/login" class="text-primary hover:underline font-medium"> Sign in instead </a>
        </p>
      </div>
    </div>
  </main>
</Layout>
