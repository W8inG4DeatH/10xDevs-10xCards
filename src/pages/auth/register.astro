---
import Layout from "../../layouts/Layout.astro";
import { RegisterForm } from "../../components/auth/RegisterForm";
---

<Layout title="Create Account - 10x Cards">
  <main
    class="min-h-screen flex items-center justify-center p-4 bg-gradient-to-br from-green-50 to-emerald-100 dark:from-gray-900 dark:to-gray-800"
  >
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <a href="/" class="inline-block">
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">10x Cards</h1>
        </a>
        <p class="mt-2 text-gray-600 dark:text-gray-400">Create your account to start building flashcards with AI.</p>
      </div>

      <RegisterForm client:load />

      <div class="mt-8 text-center text-sm text-gray-500 dark:text-gray-400">
        <p>
          By creating an account, you agree to our{" "}
          <a href="/terms" class="text-primary hover:underline">Terms of Service</a>{" "}
          and{" "}
          <a href="/privacy" class="text-primary hover:underline">Privacy Policy</a>
        </p>
      </div>
    </div>
  </main>
</Layout>
